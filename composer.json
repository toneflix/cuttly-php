{
  "name": "toneflix-code/cuttly-php",
  "description": "A PHP wrapper for Cutt.ly.",
  "type": "library",
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "guzzlehttp/guzzle": "^7.9",
    "symfony/http-client": "^7.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "pestphp/pest": "^2.35",
    "symfony/var-dumper": "^6.4|^7.1",
    "imanghafoori/php-imports-analyzer": "^1.0",
    "phpstan/phpstan": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "ToneflixCode\\CuttlyPhp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ToneflixCode\\CuttlyPhp\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Legacy",
      "email": "legacy@toneflix.com.ng",
      "homepage": "https://legacy.toneflix.com.ng",
      "role": "Developer"
    }
  ],
  "scripts": {
    "test": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
